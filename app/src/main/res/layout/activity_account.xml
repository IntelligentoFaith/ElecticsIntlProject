<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alice_blue"
        tools:context=".acitvities.AccountActivity">

    <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to your account!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="28dp"
            android:padding="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:id="@+id/bBalanceEnquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance Enquiry"
            android:layout_marginRight="18dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            app:layout_constraintBottom_toTopOf="@+id/bMiniStatement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Spinner
            android:id="@+id/accountsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bMiniStatement"
            app:layout_constraintTop_toBottomOf="@+id/bBalanceEnquiry"
            />

    <Button
            android:id="@+id/bMiniStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mini-Statement"
            android:layout_marginRight="18dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bBalanceEnquiry"
            app:layout_constraintBottom_toTopOf="@+id/bFundsTransfer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
            android:id="@+id/miniStatementSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bFundsTransfer"
            app:layout_constraintTop_toBottomOf="@+id/bMiniStatement"
            />



    <Button
            android:id="@+id/bFundsTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funds Transfer"
            android:textSize="20dp"
            android:layout_marginRight="18dp"
            app:layout_constraintTop_toBottomOf="@+id/bMiniStatement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
            android:id="@+id/fundsTransfereSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bFundsTransfer"
            />

</android.support.constraint.ConstraintLayout>