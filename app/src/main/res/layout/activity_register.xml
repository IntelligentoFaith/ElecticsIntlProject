<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/medium_turquoise"
        tools:context=".acitvities.RegisterActivity">

    <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter the following details to register!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:layout_marginRight="18dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading"
            app:layout_constraintBottom_toTopOf="@+id/etAccountNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText
            android:id="@+id/etAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Acount Number"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_marginRight="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etMobileNumber"
            app:layout_constraintBottom_toTopOf="@+id/etIDPassport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/etIDPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID/Passport Number"
            android:layout_marginRight="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etAccountNumber"
            app:layout_constraintBottom_toTopOf="@+id/etFN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
            android:id="@+id/etFN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_marginRight="18dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/etIDPassport"
            app:layout_constraintBottom_toTopOf="@+id/etLN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
            android:id="@+id/etLN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:layout_marginRight="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etFN"
            app:layout_constraintBottom_toTopOf="@+id/etOtherNames"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/etOtherNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Other Names"
            android:layout_marginRight="18dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/etLN"
            app:layout_constraintBottom_toTopOf="@+id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:layout_marginRight="18dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toBottomOf="@+id/etOtherNames"
            app:layout_constraintBottom_toTopOf="@+id/bRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            android:id="@+id/bRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:padding="10dp"
            android:layout_margin="18dp"
            android:textSize="22sp"
            android:background="@color/fire_brick"
            android:layout_marginLeft="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>